    app.listen(3000);
    console.log('Listening on http://localhost:3000');
// }


const syncDataFolder = () => {
    try {
        execSync('cd ./data && git add --all');
        execSync('cd ./data && git commit -am "$(date)"');
        execSync('cd ./data && git push');
    } catch (error) {
        // log   >_<
    }
    setTimeout(() => syncDataFolder(), 30 * 60 * 1000);
};

syncDataFolder();
