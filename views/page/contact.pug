block content
    section.main__middle__container
        section.recent-posts
            .container
                h2.text-center.with__margin
                    span Contact Us
                iframe(width='100%', height='350', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='https://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=&aq=&sll=37.422023,-122.084337&sspn=0.00357,0.008229&ie=UTF8&ll=37.421981,-122.084531&spn=0.001785,0.004115&t=m&z=18&output=embed')
                .row
                    .col-md-8
                        h3 Send us a message
                        hr
                        p
                            | Our friendly customer service representatives are committed to answering all your questions and meeting any need you may have. We would love to hear from you! Please fill out the form below so we may assist you.
                        br
                        p#feedback
                        .container
                            form#contact-form.contact-form(role='form', name='contact-form', method='post', action='', novalidate='novalidate')
                                .loading.text-center
                                    i.fa.fa-spinner.fa-pulse.fa-3x(style="margin-top:16%")
                                .row.p-0
                                    .form-group.col-md-6
                                        label.sr-only(for='name') Your Name: *
                                        input#name.form-control(required, type='text', name='name', placeholder='Your Name: *', value=user.displayName)
                                    .form-group.col-md-6
                                        label.sr-only(for='email') Email: *
                                        input#email.form-control(required, type='email', name='email', placeholder='Email: *',value=user.email)
                                .clearfix
                                .form-group
                                    label.sr-only(for='subject') Subject:
                                    input#subject.form-control(type='text', name='subject', placeholder='Subject:')
                                .form-group
                                    textarea#message.form-control(required, name='message', rows='5', placeholder='Message: *')
                                .errorBox
                                input#submit-button.btn.btn-success.btn-lg(type='submit', value='Submit')
                            #contact-form-success-message.row(style='display: none;')
                                .col
                                    h1.display-2.text-center.text-success
                                        i.fa.fa-fw.fa-check-circle-o.mr-3
                                        | message successfully sent

