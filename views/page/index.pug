extends ../layout

block before
block after
  script.
      var lock = new Auth0Lock(
          '#{env.AUTH0_CLIENT_ID}',
          '#{env.AUTH0_DOMAIN}', {
              auth: {
                  redirectUrl: '#{env.AUTH0_CALLBACK_URL}',
                  responseType: 'code',
                  params: {
                      scope: 'openid name email picture',
                  },
              }
          });


block content
  button(onclick="lock.show()") Login
  include ../block/carousel-home
  include ../block/middle-section
