extends ../layout
include ../block/order-card
include ../block/pagination

block before
    link(rel='stylesheet', href='/stylesheets/order-card.css')
block after

block content
    .container.user-block
        h2.text-center
            span about user
        .row
            .col-sd-4
                .card(style='width: 20rem;')
                    h4.card-title Card title
                    p.card-text
                        | Some quick.
                    p.text-truncate.m-0(title=user.displayName)= user.displayName
                    p.text-truncate.m-0(title=user.emails)= user.emails
                    a.btn.btn-success.w-100(href='#') Go somewhere

            section.col-md-8.pull-left.main-content
                each order in orders.data
                    +orderCatd("info", order)

                +pagination(1, orders.totalCount, 5, 7)
