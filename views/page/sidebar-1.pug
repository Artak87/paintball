extends ../layout
include ../block/order-card
include ../block/menu
include ../block/pagination

block before
    link(rel='stylesheet', href='/stylesheets/order-card.css')
block after

block content
    .container
        .row
            aside.col-md-4.pull-left
                +menuBlock()
            section.col-md-8.pull-right.main-content
                h2
                    span Left Sidebar
                +orderCatd("info")
                +orderCatd("success")
                +orderCatd("warning")
                +orderCatd("primary")
                +orderCatd("danger")

        +pagination(1, 70)
        +pagination(1, 700)
        +pagination(10, 700)
        +pagination(35, 700)
        +pagination(1, 1)
        +pagination(1, 21)
        +pagination(2, 21)

